// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Item {
  id           Int             @id
  title        String
  url          String
  image        String
  price        Float
  description  String
  reviews_qty  Int
  review_score Int
  hdd_options  ItemHddOption[]
}

model ItemHddOption {
  id      Int     @id @default(autoincrement())
  size    Int
  enabled Boolean

  item   Item @relation(fields: [itemId], references: [id])
  itemId Int

  @@unique([itemId, size])
}
